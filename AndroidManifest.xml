<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.tillsimon.storageroom_example"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application 
    	android:icon="@drawable/storageroom" 
    	android:label="@string/app_name" 
    	android:name=".application.RestaurantApplication">
		
		<activity android:name=".activities.RestaurantListViewActivity" android:theme="@android:style/Theme.Light.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activities.RestaurantDetailActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
		<activity android:name=".activities.RestaurantMapActivity" android:theme="@android:style/Theme.Light.NoTitleBar"/>
		
		<uses-library android:name="com.google.android.maps"/>

    </application>
</manifest>